---
import '@fontsource/luckiest-guy';
import '@fontsource-variable/merriweather-sans/wght-italic.css';
---
<div class="width-full md:p-10 p-2 md:m-auto m-0">
  <h1 class="md:text-6xl text-3xl">
    Halloween Story 
    <span>AI Generator</span>
  </h1>
</div>


<style>
  span {
    font-family: 'Merriweather Sans Variable', sans-serif;
    font-style: italic;
  }
  h1 {
    font-family: 'Luckiest Guy', system-ui;
    color: #ff6600;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    animation: colorCycle 10s infinite;
  }
  @keyframes colorCycle {
    0%, 100% {
      color: #ff6600;
    }
    33% {
      color: #ec7729;
    }
    66% {
      color: #bb4d03;
    }
  }
</style>