---
import "@fontsource/luckiest-guy";
import "@fontsource-variable/merriweather-sans/wght-italic.css";
import "@fontsource/creepster";

import { GoHomeFill } from "react-icons/go";
import { FaLightbulb } from "react-icons/fa";
import { TbHelpSquareRoundedFilled } from "react-icons/tb";
---

<div
  class="flex flex-col md:flex-row justify-between items-center w-full p-5 gap-5"
>
  <div class="flex-1 md:block hidden"></div>
  <div class="width-full md:p-0 p-3 md:m-auto m-0">
    <h1 class="md:text-6xl text-3xl">
      Halloween Story
      <span class="span-title">Generator</span>
    </h1>
  </div>
  <div class="flex-1 md:inline-flex hidden gap-2 justify-center">
    <a
      href="/"
      class="flex flex-row items-center justify-center gap-1 hover:opacity-80 active:text-orange-500 transition duration-200"
    >
      <GoHomeFill size={25} />
      <span>Home</span>
    </a>
    <a
      href="/examples"
      class="flex flex-row items-center justify-center gap-1 hover:opacity-80 active:text-orange-500 transition duration-200"
    >
      <FaLightbulb size={25} />
      <span>Examples</span>
    </a>
    <a
      href="/about"
      class="flex flex-row items-center justify-center gap-1 hover:opacity-80 active:text-orange-500 transition duration-200"
    >
      <TbHelpSquareRoundedFilled size={25} />
      <span>About</span>
    </a>
  </div>
</div>

<style>
  .span-title {
    font-family: "Merriweather Sans Variable", sans-serif;
    font-style: italic;
  }
  h1 {
    font-family: "Creepster", system-ui;
    color: #ff6600;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    animation: colorCycle 5s infinite;
  }
  @keyframes colorCycle {
    0%,
    100% {
      color: #ff6600;
    }
    33% {
      color: #f87925;
    }
    66% {
      color: #af4a06;
    }
  }
</style>
