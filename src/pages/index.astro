---
import Layout from "../layouts/Layout.astro";
import Input from "../components/Input.astro";
---

<Layout title="Welcome to Astro.">
	<section>
		<p>Upload an image to create a halloween story</p>
		<p>The image will be our protagonist</p>
		<br/>
		<div class="input-container md:w-1/3 w-full">
			<Input />
		</div>
	</section>
</Layout>

<style>
	section {
		min-height: 70vh;
		text-align: center;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	.input-container {
		display: flex;
		justify-content: center;
	}
</style>
