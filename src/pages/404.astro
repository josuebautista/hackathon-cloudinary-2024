---
import Layout from "../layouts/Layout.astro";
const { searchParams } = Astro.url;
const reason = searchParams.get("reason");
---

<Layout title={`Error while ${reason ? reason : 'Navigate'}`}>
  <main>
    <div class="content">
      <h1 class="text-4xl font-bold">
        Something went wrong
      </h1>
    </br>
      <a href="/">
      Return to home page
      </a>
    </div>
  </main>
</Layout>

<style>
  main {
    min-height: 85vw;
    display: grid;
    place-items: center;
  }
  .content {
    text-align: center;
  }
  h1 {
    font-size: 3rem;
    margin-bottom: 10px;
  }
  a {
    opacity: 0.8;
    margin-top: 40px;
  }
  a:hover {
    opacity: 1;
  }

</style>

<script>
  import { navigate } from "astro:transitions/client";
  const returnButton = document.querySelector("#return");
  if (returnButton) {
    returnButton.addEventListener("click", () => {
      navigate("/");
    });
  }
</script>