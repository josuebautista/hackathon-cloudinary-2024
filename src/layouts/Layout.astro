---
import "@fontsource-variable/merriweather-sans";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-solid">
		<div class="bg-halloween"></div>
		<div class="bg-solid">
			<nav class="container">
				<Header />
			</nav>
		</div>
		<hr />
		<main class="container">
			<slot />
		</main>
		<hr />
		<div class="bg-solid">
			<footer class="container">
				<Footer />
			</footer>
		</div>
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
	}
	body {
		margin: 0;
		position: relative;
		z-index: 1;
		box-sizing: border-box;
		min-height: 100vh;
		font-family: "Merriweather Sans Variable", sans-serif;
	}
	nav {
		margin: 0px auto;
		text-align: center;
		line-height: 1.4;
		background-color: light-dark(#fff, #1b1b1b);
		color: light-dark(#283747, #d4dbdb);
	}
	.bg-halloween {
		background-image: url("/bg-halloween.png");
		background-repeat: repeat;
		background-attachment: fixed;
		opacity: 0.3;
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
	}
	.bg-solid {
		background-color: light-dark(#fff, #1b1b1b);
		color: light-dark(#283747, #d4dbdb);
	}
	.bg-solid-to-transparency {
		background-color: light-dark(rgb(255, 255, 255), rgb(27, 27, 27));
		background: linear-gradient(180deg, light-dark(rgb(255, 255, 255, 1), rgb(27, 27, 27, 1)) 0%, light-dark(rgb(255, 255, 255, 0), rgb(27, 27, 27, 0)) 100%);
		color: light-dark(#283747, #d4dbdb);
	}
	hr {
		border-top: 2px solid light-dark(#283747, #d4dbdb);
		opacity: 0.3;
	}
	main {
		margin: auto;
		padding: 1rem;
		font-size: 1.4rem;
		line-height: 1.5;
		min-height: 80vh;
	}
	p {
		color: light-dark(#313131, #a7a5a5);
		text-align: center;
	}
	footer {
		margin: 0px auto;
		padding: 1rem;
		text-align: center;
		background-color: light-dark(#fff, #1b1b1b);
		color: light-dark(#283747, #d4dbdb);
	}
</style>
