---
import '@fontsource/luckiest-guy';
import '@fontsource-variable/merriweather-sans/wght-italic.css';
import '@fontsource/creepster';
import { GoHomeFill } from "react-icons/go";
---
<div class="flex flex-col md:flex-row justify-between items-center w-full p-5 gap-5">
  <div class='flex-1 md:block hidden'>

  </div>
  <div class="width-full md:p-10 p-5 md:m-auto m-0">
    <h1 class="md:text-6xl text-3xl">
      Halloween Story 
      <span class="span-title">Generator</span>
    </h1>
  </div>
  <div class="flex flex-1 justify-center  hover:opacity-80">
    <a href="/" class="flex flex-row items-center justify-center gap-2">
      <GoHomeFill size={30} />
      <span>Home</span>
    </a>
  </div>
</div>


<style>
  .span-title {
    font-family: 'Merriweather Sans Variable', sans-serif;
    font-style: italic;
  }
  h1 {
    font-family: 'Creepster', system-ui;
    color: #ff6600;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    animation: colorCycle 5s infinite;
  }
  @keyframes colorCycle {
    0%, 100% {
      color: #ff6600;
    }
    33% {
      color: #f87925;
    }
    66% {
      color: #af4a06;
    }
  }
</style>