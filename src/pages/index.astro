---
import Layout from "../layouts/Layout.astro";
import Input from "../components/Input.astro";
---

<Layout title="Welcome to Astro.">
	<section class="max-w-[1200px] min-h-[70vh] mx-auto flex flex-col justify-center items-center text-center">
		<p class="max-w-[700px] mb-5">
			Upload an image to generate a halloween story, the image will be used as the main character.
		</p>
		<div class="flex flex-col justify-center md:w-1/3 w-full gap-5">
			<Input />
		</div>
	</section>
</Layout>

